<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Mrp production form view inherited-->

    <record id="mrp_production_form_view_inherited" model="ir.ui.view">
        <field name="name">mrp.production.form.inherited</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="show_finished_move_line_ids" type="object"
                                icon="fa-list"
                                attrs="{'invisible':[('finished_move_line_ids_count','=',0)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="finished_move_line_ids_count" class="mr4"/>
                            <span>Finished</span>
                        </span>
                        <span class="o_stat_text">
                            Product
                        </span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>




</odoo>
